<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="순위"
        android:textSize="25sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="2dp">

        <ImageView
            android:id="@+id/img_team_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="Team Logo" />

        <TextView
            android:id="@+id/tv_teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_games"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="경기"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_wins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="승"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_losses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="패"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_draws"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="무"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_winRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="승률"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_winningMargin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="게임차"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />

    <TextView
        android:id="@+id/tv_continuity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="연속"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingEnd="2dp" />
</LinearLayout>
